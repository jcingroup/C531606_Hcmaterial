
@{
    ViewBag.Title = "聯絡我們";
    ViewBag.BodyClass = "ContactUs";
    ViewBag.breadCrumb = "聯絡我們";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section class="container">
    <h2>聯絡我們</h2>
    <p>歡迎來到泓辰材料公司網站，請留下您的聯絡方式、想詢問的內容以及您的意見想法， 我們將盡快與您聯絡，謝謝您!</p>

    <form action="" class="contact-form col-7 col-sm-12" id="ContactUsInfo">

        <div class="row">
            <label class="col-6">
                <em class="text-error">*</em> 聯絡人
                <input type="text" id="m_name" required>
            </label>

            <label class="col-6">
                公司名稱
                <input type="text" id="m_company">
            </label>
        </div>

        <div class="row">
            <label class="col-6">
                聯絡電話
                <input type="tel" id="m_tel">
            </label>

            <label class="col-6">
                聯絡傳真
                <input type="tel" id="m_fax">
            </label>
        </div>

        <div class="row">
            <label class="col-6">
                城市
                <input type="text" id="m_city">
            </label>

            <label class="col-6">
                <em class="text-error">*</em> 電子信箱
                <input type="email" id="m_email" required>
            </label>
        </div>

        <label for="m_content">您的意見</label>
        <textarea rows="5" id="m_content"></textarea>
        @* @if (CommWebSetup.IsDemo == "0")
        {
            <div class="g-recaptcha" data-sitekey="6LexIhoTAAAAAINPFxaeQCa_6XJhKbAx8PtwTviK"></div>
        }
        <div id="err" style="color:red" hidden></div> *@

        <button class="btn">發送</button>
    </form>

    <div class="contact col-5 col-sm-12">
