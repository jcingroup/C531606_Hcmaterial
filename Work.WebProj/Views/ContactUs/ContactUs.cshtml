
@{
    ViewBag.Title = "聯絡我們";
    ViewBag.BodyClass = "ContactUs";
    ViewBag.breadCrumb = "聯絡我們";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section class="container">
    <h2>聯絡我們</h2>
    <p>歡迎來到泓辰材料公司網站，請留下您的聯絡方式、想詢問的內容以及您的意見想法， 我們將盡快與您聯絡，謝謝您!</p>

    <form action="" class="contact-form col-7" id="ContactUsInfo">

        <p class="row">
            <div class="col-6">
                <label for="m_name">* 聯絡人</label>
                <input type="text" id="m_name" required>
            </div>

            <div class="col-6">
                <label for="m_company">公司名稱</label>
                <input type="text" id="m_company">
            </div>
        </p>

        <p class="row">
            <div class="col-6">
                <label for="m_tel">聯絡電話</label>
                <input type="tel" id="m_tel">
            </div>
            <div class="col-6">
                <label for="m_fax">聯絡傳真</label>
                <input type="tel" id="m_fax">
            </div>
        </p>

        <p class="row">
            <div class="col-6">
                <label for="m_city">城市</label>
                <input type="text" id="m_city">
            </div>
            <div class="col-6">
                <label for="m_email">* 電子信箱</label>
                <input type="email" id="m_email" required>
            </div>
        </p>

        <label for="m_content">您的意見</label>
        <textarea rows="5" id="m_content"></textarea>
