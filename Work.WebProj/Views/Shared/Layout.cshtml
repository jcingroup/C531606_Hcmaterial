<!DOCTYPE html>
<html lang="zh-TW">
<!-- saved from url=(0014)about:internet -->

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="keywords" content="@Resources.Web.keywords">
    <meta name="description" content="@Resources.Web.description">
    <title>@Resources.Res.System_FrontName:@ViewBag.Title::@Resources.Web.keywords</title>
    <!--[if lt IE 9]><script src="//ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"></script><![endif]-->
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="bookmark" href="/favicon.ico" />
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans'>
    <link rel="stylesheet" href="~/Content/css/swiper.min.css">
    <link rel="stylesheet" href="~/Content/css/grid.css?v=@CommWebSetup.CacheVer">
    @if (ViewBag.IsFirstPage)
    {
        <link rel="stylesheet" href="~/Content/css/index.css?v=@CommWebSetup.CacheVer">
    }
    else
    {
        <link rel="stylesheet" href="~/Content/css/page.css?v=@CommWebSetup.CacheVer">
    }
    <link rel="stylesheet" href="~/Content/css/icomoon.css?v=@CommWebSetup.CacheVer">
    @RenderSection("css", false)
</head>

<body class="@ViewBag.BodyClass">

    @* <div class="demobar">網站已正式上線，此為demo網站</div> *@

    <div id="wrapper">

        <header id="header">
            <h1 onclick="location.href='@Url.Content("~/index")'" title="@Resources.Web.back_home" class="logo">@Resources.Res.System_FrontName</h1>
            <button class="menu-trigger"><span class="icon-menu2">MENU</span></button>@* 手機menu *@
            <nav id="menu">
                <span class="icon-cross toggle"></span>@* 手機close menu *@
                <a href="~/AboutUs"><i class="icon-trophy"></i>@Resources.Web.nav_aboutus</a>
                <a href="~/News"><i class="icon-megaphone"></i>@Resources.Web.nav_news</a>
                <a href="~/Products"><i class="icon-battery"></i>@Resources.Web.nav_products</a>
                <a href="~/JoinUs"><i class="icon-power-plug"></i>@Resources.Web.nav_joinus</a>
                <a href="~/ContactUs"><i class="icon-paper-plane"></i>@Resources.Web.nav_contactus</a>
                <a href="http://www.hstech.com.tw/" target="_blank"><i class="icon-switch"></i>@Resources.Web.System_FrontName</a>
            </nav>
            <nav class="lang-nav">
                <a href="@Url.Action("SetLanguage")?L=zh-TW&A=index">繁體中文</a>
                <a href="@Url.Action("SetLanguage")?L=zh-CN&A=index">简体中文</a>
                <a href="@Url.Action("SetLanguage")?L=en-US&A=index">English</a>
            </nav>
        </header>

        @if (ViewBag.IsFirstPage)
        {
            <div id="banner" class="swiper-container">
                <ul class="swiper-wrapper">
                    <li class="swiper-slide">
                        <h3 class="text-white font-sp" data-swiper-parallax="-300">LEADING YOUR ECO-LIFE</h3>
                        <h2 data-swiper-parallax="-500">@Resources.Web.banner_title1</h2>
                        <span class="animate wind w1">@Resources.Web.banner_wind</span>
                        <span class="animate wind w2">@Resources.Web.banner_wind</span>
                        <img src="~/Content/images/index/banner.jpg?v=2" alt="@Resources.Web.banner_img1">
                    </li>
                    <li class="swiper-slide">
                        <h2 class="text-white font-sp" data-swiper-parallax="-300">GREEN<br>ENERGY</h2>
                        <span class="animate motion car">@Resources.Web.banner_car</span>
                        <span class="animate motion ship">@Resources.Web.banner_ship</span>
                        <span class="animate motion bicycle">@Resources.Web.banner_bicycle</span>
                        <img src="~/Content/images/index/banner2.jpg?v=2" alt="@Resources.Web.banner_img2">
                    </li>
                    <li class="swiper-slide">
                        <h2 class="t1 text-white font-sp" data-swiper-parallax="-300">PROFESSIONAL</h2>
                        <h2 class="t2 text-white font-sp" data-swiper-parallax="-500">TECHNICAL TEAM</h2>
                        <img src="~/Content/images/index/banner3.jpg" alt="@Resources.Web.banner_img3">
                    </li>
                </ul>
                <div class="swiper-pagination swiper-pagination-white"></div>
            </div><!-- banner //-->

            @RenderBody()
        }
        else
        {
            <div id="banner" class="swiper-container">
                <ul class="swiper-wrapper">
                    <li class="swiper-slide"><img src="~/Content/images/banner.gif" alt="@Resources.Web.banner_img1"></li>
                    <li class="swiper-slide"><img src="~/Content/images/banner2.jpg" alt="@Resources.Web.banner_img2"></li>
                    <li class="swiper-slide"><img src="~/Content/images/banner3.jpg" alt="@Resources.Web.banner_img3"></li>
                </ul>
            </div><!-- banner //-->

            <main id="main">
                <ul class="breadcrumb">
                    <li><a href="~/index">HOME</a></li>
                    @RenderSection("breadCrumb", required: false)
                    <li>@ViewBag.breadCrumb</li> @* 當前頁名稱 *@
                </ul>

                @RenderBody()

            </main>
        }

    </div><!-- wrapper //-->

    <footer id="footer">
        <div class="wrap">
            <nav class="foot-nav col-7 col-xs-12">
                <dl class="col-4">
                    <dt>INFORMATION</dt>
                    <dd>
                        <a href="~/AboutUs">@Resources.Web.nav_aboutus</a>
                        <a href="~/News">@Resources.Web.nav_news</a>
                        <a href="~/ContactUs">@Resources.Web.nav_contactus</a>
                    </dd>
                </dl>
                <dl class="col-4">
                    <dt>PRODUCTS</dt>
                    <dd>
                        <a href="~/Products">@Resources.Web.products_item1</a>
                        <a href="~/Products/Technology">@Resources.Web.products_item2</a>
                        <a href="~/Products/Trend">@Resources.Web.products_item3</a>
                        <a href="~/Products/Build">@Resources.Web.products_item4</a>
                    </dd>
                </dl>
                <dl class="col-4">
                    <dt>JOIN US</dt>
                    <dd>
                        <a href="~/JoinUs/#tab-1">@Resources.Web.joinus_item1</a>
                        <a href="~/JoinUs/#tab-2">@Resources.Web.joinus_item2</a>
                        @* <a href="~/JoinUs/#tab-3">社團</a> *@
                        <a href="http://www.104.com.tw/jobbank/custjob/index.php?r=cust&j=553f4770393b436c35373f683d433b1e12e2e2e71464b592634j53&jobsource=checkc" target="_blank">@Resources.Web.joinus_item3</a>
                    </dd>
                </dl>
            </nav>

            <dl class="contacts col-5 col-xs-12 col-lg-4 offset-lg-1">
                <dt>CONTACT US</dt>
                <dd class="icon-tel">@Resources.Web.contactus_tel_info</dd> @* 886-3-4191222 *@
                <dd class="icon-fax">@Resources.Web.contactus_fax_info</dd> @* 886-3-4192333 *@
                <dd>@Resources.Web.address</dd>
                <dd><a href="mailto:sales@hcmaterial.com.tw">sales@hcmaterial.com.tw</a></dd>
            </dl>

            <div class="copyright"><em>HCM</em> &copy; 2016</div>
        </div>
    </footer>

    <script src="//code.jquery.com/jquery-latest.min.js"></script>
    <script src="~/Content/js/swiper.min.js"></script>
    <script src="~/Content/js/common.js"></script>
    <script>
        var mySwiper = new Swiper('#banner', {
            autoplay: 5000,
            speed: 1200,
            effect: 'fade',
            autoplayDisableOnInteraction: false,
            fade: {
                crossFade: true
            },
            pagination: '.swiper-pagination',
            paginationClickable: true,
            parallax: true
        })
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>