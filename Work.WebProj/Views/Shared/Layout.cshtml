    @* <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"> *@
    <meta name="keywords" content="">
    <meta name="description" content="">
    <title>::@Resources.Res.System_FrontName::@ViewBag.Title</title>
    <!--[if lt IE 9]><script src="//ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"></script><![endif]-->
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans'>
    <link rel="stylesheet" href="~/Content/css/font-awesome.css">
    <link rel="stylesheet" href="~/Content/css/swiper.min.css">
    <link rel="stylesheet" href="~/Content/css/grid.css">
    @RenderSection("css", false)
    @if (ViewBag.IsFirstPage)
    {
        <link rel="stylesheet" href="~/Content/css/index.css">
    }
    else
    {
        <link rel="stylesheet" href="~/Content/css/page.css">
    }
</head>

<body class="@ViewBag.BodyClass">

    <div id="wrapper">

        <header id="header">
            <h1 onclick="location.href='@Url.Content("~/index")'" title="HOME" class="logo">@Resources.Res.System_FrontName</h1>
            <button class="menu-trigger"><span>MENU</span></button>
            <ul id="menu" class="list-inline">
                <li><a href="~/AboutUs">公司簡介</a></li>
                <li><a href="~/News">最新消息</a></li>
                <li><a href="~/Products">電池材料</a>
